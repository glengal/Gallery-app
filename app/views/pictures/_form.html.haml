= simple_form_for @picture, html:{multipart: true} do |f|
  - if @picture.errors.any?
    #errors
    %h2 Oops, i think you have some errors
  .form-group
    = f.input :image, input_html: {class: 'form-control'},required: true
  .form-group
    = f.input :title, input_html: {class: 'form-control'},required: true 

  .form-group
    = f.input :description, input_html: {class: 'form-control'}
    = f.button :submit, class: "btn btn-primary"